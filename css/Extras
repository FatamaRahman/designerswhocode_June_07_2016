 *
 * Animation
 *
 */

.active .meta-data {
  opacity: 0;
/*  transition: all .1s ease-in-out;
  transform: translate3d(20px, 0px, 0px);
  transition-delay: 0ms;*/
}

.item.active > img {
  width: 125px;
  height: 125px;
/*  transition-delay: 100ms;
*/}

.item.second.active  {
  transform: translate3d(125px, 0px, 0px);
  border: 1px solid #fff;
  border-top: none;
  width: 123px;
}

.item.third.active  {
  transform: translate3d(250px, 0px, 0px);
}

.item.second.active > img {
  width: 123px;
  top: -60px;
}

.item.second.active .meta-data-overlay {
  width: 123px;
}

.item.third.active img {
  top: -121px;
}

.meta-data-overlay {
  bottom: -120px;
  height: 55px;
}

.active .meta-data-overlay {
  opacity: 1;
/*  transition: all .4s ease-in-out;
  transition-delay: 200ms;*/
}

.active .meta-data-overlay span {
  opacity: 1;
  transform: translate3d(0, 0px, 0px);
/*  transition-delay: .2s;
*/}

.item.second .meta-data-overlay {
  bottom: -60px;
}

.item.third .meta-data-overlay {
  bottom: 1px;
}

